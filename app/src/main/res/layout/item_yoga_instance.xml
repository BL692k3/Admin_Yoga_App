<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left side for instance details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1">

            <!-- Date of the instance -->
            <TextView
                android:id="@+id/tvInstanceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 17/10/2023"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Teacher's name -->
            <TextView
                android:id="@+id/tvInstanceTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: John Doe"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Additional comments -->
            <TextView
                android:id="@+id/tvInstanceComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner-friendly class."
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Right side for checkbox -->
        <CheckBox
            android:id="@+id/cbSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
